extends layout-base

block content
    form(name="journey-info", method="post")
        div.input
            div.label Fuel (in liters)
                input(type="number", name="fuel-value", step="any", min="0.01", placeholder="0.01 L. is minimum", autofocus)
            div.label Journey driven (in #{unitType})
                input(type="number", name="journey-length", step="any", min="0.01", placeholder="0.01 Km. is minimum")
        div.action
            input(type="submit", value="Count average")
